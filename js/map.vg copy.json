{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Hapinness Score",
    "width": 800,
    "height" :600,
    "data": {
      "url": "https://raw.githubusercontent.com/sookmun/FIT3179_Assignment2/main/js/world_map_new.topojson",
      "format": {
            "type": "topojson",
            "feature": "world_map"
          }
    },
    "transform": [{
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/sookmun/FIT3179_Assignment2/main/Data/2021.csv"
            
          },
          "key": "Country_Name",
          "fields": ["Ladder_Score"]
        }
      }
    ],
    "mark": {
      "type": "geoshape"
      },
    "encoding": {
      "color": {
        "field": "Ladder_Score",
        "type": "quantitative",
        "scale": {"scheme" :"redyellowgreen"}
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "Country_Name"},
        {"field": "Ladder_Score", "type": "quantitative"}
      ]
    }
  }
  